
@{
    IT.Core.ViewModels.LPOInvoiceViewModel LPOInvoiceViewModel = new IT.Core.ViewModels.LPOInvoiceViewModel();

    LPOInvoiceViewModel = ViewBag.lPOInvoiceViewModel as IT.Core.ViewModels.LPOInvoiceViewModel;
}
<hr />

<div class="row">
    <div class="col-md-6">
        @if (LPOInvoiceViewModel != null)
        {
            <div class="form-group">
                <label>Term & Condition:</label>
                <div class="form-group">
                    <div>
                        <textarea cols="40" rows="2" id="TermCondition" placeholder="Term & Condition" style="border:1px dotted">@LPOInvoiceViewModel.CustomerNote</textarea>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label>Customer Note:</label>
                <div class="form-group">
                    <div>
                        <textarea cols="40" rows="2" id="CustomerNote" placeholder="Customer Note" style="border:1px dotted">@LPOInvoiceViewModel.CustomerNote</textarea>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                <label>Term & Condition:</label>
                <div class="form-group">
                    <div>
                        <textarea cols="40" rows="2" id="TermCondition" placeholder="Term & Condition" style="border:1px dotted"></textarea>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label>Customer Note:</label>
                <div class="form-group">
                    <div>
                        <textarea cols="40" rows="2" id="CustomerNote" placeholder="Customer Note" style="border:1px dotted"></textarea>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        <div class="float-right">
            <table class="table-hover table-responsive" id="customers">

                @if (LPOInvoiceViewModel != null)
                {
                    <thead>
                        <tr>
                            <th>Total (AED):</th>
                            <th id="SubTotal">@Math.Round(LPOInvoiceViewModel.Total, 2)</th>
                        </tr>
                        <tr>
                            <th>VAT 5%:</th>
                            <th id="TotalVAT">@Math.Round(LPOInvoiceViewModel.VAT, 2)</th>
                        </tr>
                        <tr>
                            <th>Sub Total (AED):</th>
                            <th id="gtotal">@Math.Round(LPOInvoiceViewModel.GrandTotal, 2)</th>
                        </tr>
                    </thead>
                }
                else
                {
                    <thead>
                        <tr>
                            <th>Total (AED):</th>
                            <th id="SubTotal">0.00</th>
                        </tr>
                        <tr>
                            <th>VAT 5%:</th>
                            <th id="TotalVAT">0.00</th>
                        </tr>
                        <tr>
                            <th>Sub Total (AED):</th>
                            <th id="gtotal">0.00</th>
                        </tr>
                    </thead>
                }

            </table>
        </div>
    </div>
</div>



